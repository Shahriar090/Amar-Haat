{
  "compilerOptions": {
  "rootDir": "./src",
  "outDir": "./dist",
  "composite": true,
  "module": "esnext",
  "moduleResolution": "bundler",
  "target": "ES2022",
  "types": [],
  "sourceMap": true,
  "declaration": true,
  "declarationMap": true,
  "noUncheckedIndexedAccess": true,
  "exactOptionalPropertyTypes": true,
  "strict": true,
  "jsx": "react-jsx",
  "verbatimModuleSyntax": true,
  "isolatedModules": true,
  "noUncheckedSideEffectImports": true,
  "moduleDetection": "force",
  "skipLibCheck": true
}
}