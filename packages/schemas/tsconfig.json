{
	"extends": "@amar-haat/config/tsconfig.json",
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "./dist",
		"tsBuildInfoFile": "./dist/tsconfig.tsbuildinfo",
		"declaration": true,
		"emitDeclarationOnly": true,
		"composite": true
	},
	"tsc-alias": {
		"verbose": false,
		"resolveFullPaths": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
